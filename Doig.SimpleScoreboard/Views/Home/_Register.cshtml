<!-- ko with: register -->
<hgroup class="title">
    <h1>Register</h1>
</hgroup>
<form class="form-horizontal" role="form">
    <fieldset>
        <legend>Create a new account.</legend>
        <ul class="text-error" data-bind="foreach: errors">
            <li data-bind="text: $data"></li>
        </ul>
        <div class="form-group">
            <label for="UserName" class="col-lg-2 control-label">User name</label>
            <div class="col-lg-5">
                <input type="text" class="form-control" name="UserName" data-bind="value: userName, hasFocus: true" />
            </div>
        </div>
        <div class="form-group">
            <label for="Password" class="col-lg-2 control-label">Password</label>
            <div class="col-lg-5">
                <input type="password" class="form-control" name="Password" data-bind="value: password" />
            </div>
        </div>
        <div class="form-group">
            <label for="ConfirmPassword" class="col-lg-2 control-label">Confirm password</label>
            <div class="col-lg-5">
                <input type="password" class="form-control" name="ConfirmPassword" data-bind="value: confirmPassword" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-5">
                <button type="submit" class="btn btn-default" data-bind="click: register, disable: registering">Register</button>
            </div>
        </div>
        <p><a href="#" data-bind="click: login">Log in</a> if you already have a local account.</p>
    </fieldset>
</form>
<!-- /ko -->

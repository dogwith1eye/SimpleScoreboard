<hgroup class="title">
    <h1>Register</h1>
</hgroup>
<form class="form-horizontal" role="form">
    <fieldset >
        <legend data-bind="text: 'Associate your ' + loginProvider() + ' account.'"></legend>
        <p class="text-success">
            You've successfully authenticated with <strong data-bind="text: loginProvider"></strong>.
            Please enter a user name for this site below and click the Register button to finish logging in.
        </p>
        <ul class="text-error" data-bind="foreach: errors">
            <li data-bind="text: $data"></li>
        </ul>
        <div class="form-group">
            <label for="UserName" class="col-lg-2 control-label">User name</label>
            <div class="col-lg-5">
                <input type="text" class="form-control" name="UserName" data-bind="value: userName, hasFocus: true" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-7">
                <button type="submit" class="btn btn-default" data-bind="click: register, disable: registering">Sign up</button>
            </div>
        </div>
    </fieldset>
</form>
<!-- /ko -->
